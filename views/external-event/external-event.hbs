{{#section 'script'}}
  <script type="text/javascript">

  $(document).ready(function(e){
    $("#responsibleNewEvent").select2()
    $("#selectReuseEvent").select2()
    $("#iddepartamento").select2()
    $("#listProduct").select2({
      placeholder: "SELECT THE PRODUCTS"
    })
    $('[data-toggle="tooltip"]').tooltip();

    initializeDatesSearch();
    searchEvents()

    $('#formFind').submit()
  })

  function showModalFind(){
    $('#modalFind').modal()
  }

  $('#ResponsibleOrCreator').select2({placeholder: 'Select the Creator or Responsible'})

  $('#firstDay').val(moment().startOf('year').format('YYYY-MM-DD'))
  $('#lastDay').val(moment().endOf('year').format('YYYY-MM-DD'))

  function checkStatusEmpty(){
    if (0 === $('input[name=Status]:checked').length) {
      swal({
        title:"",
        text:"Please select at least 1 status.",
        type: "error"
      }).then(
        function () {
        }
      )
      throw new Error('Location Empty')
    }
  }

  function checkLocationEmpty(){
    if (0 === $('input[name=Location]:checked').length) {
      swal({
        title:"",
        text:"Please select at least 1 location.",
        type: "error"
      }).then(
        function () {
        }
      )
      throw new Error('Location Empty')
    }
  }

  $('#formFind').submit(function(e){
    e.preventDefault();

    checkLocationEmpty()
    checkStatusEmpty()

    $.ajax({
      url: '/external-event/searchFiltered',
      type: 'POST',
      data: $('#formFind').serialize(),
      dataType:'json',
      success: function(data) {
        console.log(data);
        $('#externalEvents tbody').empty()

        var dataTableBody = data.reduce(function(acc,ele){
          let newLine = '<tr data-event-code="'+ele.EventCode+'">'
                          +'<td class="text-center">'+ ele.EventCode +'</td>'
                          +'<td>'+ ele.CreatedByName +'</td>'
                          +'<td>'+ ele.ResponsibleByName +'</td>'
                          +'<td class="text-center">'+ ele.start +'</td>'
                          +'<td class="text-center">'+ ele.end +'</td>'
                          +'<td>'+ ele.title +'</td>'
                          +'<td>'+ ele.DepartureFrom +'</td>'
                          +'<td>'+ ele.StatusName +'</td>'
                          +'<td><i onclick="loadMoreInfoExternal(this);" class="fa fa-search-plus" aria-hidden="true"></i></td>'
                       +'</tr>'
          acc = acc + newLine
          return acc
        }, '')

        $('#externalEvents tbody').append(dataTableBody)
        $('#modalFind').modal('hide')
      }
    })
  })

  $("#selectReuseEvent").on("change", function (e) {
    let EventCode = $("#selectReuseEvent").val()
    if('' === EventCode){
      document.getElementById('formNewEvent').reset()
      $('#responsibleNewEvent').val('').trigger('change')
      $('#iddepartamento').val('').trigger('change')
      $('#additionalInformation').text('')
      $('.lineName').empty()
      $('#sumparent').text(0)
      $('#sumpupil').text(0)
      $('#sumstaff').text(0)
      $('#sumvisitor').text(0)
      $('#tableItemEvent tbody').empty()
    }else{
      let dataSend = {EventCode}

      $.ajax({
        url: '/find/fillout-form',
        type: 'POST',
        data: dataSend,
        dataType:'json',
        success: function(data) {
          document.getElementById('formNewEvent').reset()
          console.log(data);
          // debugger
          $('#StartEvent').val(data.EventFound.start.replace(' ','T'))
          $('#EndEvent').val(data.EventFound.end.replace(' ','T'))
          if(data.EventFound.LeavingFromEvent) $('#LeavingFromEvent').val(data.EventFound.LeavingFromEvent.replace(' ','T'))
          $('#nameNewEvent').val(data.EventFound.title)
          $('#responsibleNewEvent').val(data.EventFound.ResponsibleByEvent).trigger('change')
          $('#iddepartamento').val(data.EventFound.Departament_ID).trigger('change')

          $('#locationEvent').val(data.EventFound.LocationEvent)
          $('#departureFrom').val(data.EventFound.DepartureFrom)
          $('#meansOfTransport').val(data.EventFound.MeansOfTransport)
          $('#qtdPerson').val(data.EventFound.AmountPerson)
          $('input[name="transportWaitVenue"][value='+ data.EventFound.TransportWaitAvenue +']').prop("checked", true)

          $('#id_budget').val(data.EventFound.Budget_ID).trigger('change')

          $('#additionalInformation').text(data.EventFound.AdditionalInformation)

          $('#qtdParentNewEvent').val(data.EventFound.Nparent)
          $('#qtdPupilNewEvent').val(data.EventFound.Npupil)
          $('#qtdStaffNewEvent').val(data.EventFound.Nstaff)
          $('#qtdVisitorNewEvent').val(data.EventFound.Nvisitor)

          let sum = 0
          $('.nParticipant').each(function(){
