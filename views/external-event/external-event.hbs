<div id="modalNewEventExternal" class="modal" role="dialog">
  <div class="modal-dialog" style="width:90%;">
    <!-- Modal content-->
    <div class="modal-content" data-step="6" data-intro="Form to create new external event">
      <div class="modal-header">
        <div class="row">
          <div class="col-sm-6">
            <h5 class="modal-title">New External Event</h5>
          </div>
          <div class="col-sm-6" data-step="7" data-intro="Select an event from the list to fill in the fields automatically">
            <select class="form-control" name="" id="selectReuseEvent" style="width:100%;">
              <option value="">Reuse Info Event:</option>
              {{#each myEvents}}
                <option value="{{EventCode}}">{{EventCode}} - {{title}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>
      <form id="formNewEvent" action="index.html" method="post">
        <div class="modal-body">
          <div class="container">
            <div class="row">
              <div class="col-sm-12">
                <div class="panel panel-primary">
                  <div class="panel-heading">Main information</div>
                  <div class="panel-body">
                    <div class="row">
                      <div class="col-sm-2" data-step="8" data-intro="When event will start">
                        <label for="StartEvent">Departure</label>
                        <input type="datetime-local" name="StartEvent" id="StartEvent" class="form-control" required>
                      </div>
                      <div class="col-sm-2" data-step="9" data-intro="When people will leave of event site">
                        <label for="LeavingFromEvent">Leaving the Event Site</label>
                        <input type="datetime-local" name="LeavingFromEvent" id="LeavingFromEvent" class="form-control">
                      </div>
                      <div class="col-sm-2" data-step="10" data-intro="When the people will arrived back to the school">
                        <label for="EndEvent">Arrival at School</label>
                        <input type="datetime-local" name="EndEvent" id="EndEvent" class="form-control" required>
                      </div>
                      <div class="col-sm-2" data-step="11" data-intro="Event Name">
                        <label for="nameNewEvent"></label>
                        <input type="text" name="nameNewEvent" id="nameNewEvent" class="form-control" placeholder=" Event Name" required>
                      </div>
                      <div class="col-sm-2" data-step="12" data-intro="Responsible by event, if empty, the system will consider you as responsible">
                        <label for="responsibleNewEvent"></label>
                        <select id="responsibleNewEvent" name="responsibleNewEvent" style="width:100%;">
                          <option value="">RESPONSIVE BY EVENT</option>
                          {{#each allActiveUser}}
                            <option value="{{matricula}}">{{pad matricula 4 0}} - {{toTitleCase nomeusuario}}</option>
                          {{/each}}
                        </select>
                      </div>
                      <div class="col-sm-2" data-step="13" data-intro="Choose the departament">
                        <label for="iddepartamento"></label>
                        <select id="iddepartamento" name="iddepartamento" style="width:100%;">
                          <option value="">SELECT THE DEPARTAMENT</option>
                          {{#each allDepartament}}
                            <option value="{{iddepartamento}}">{{toTitleCase nomedepartamento}}</option>
                          {{/each}}
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-4">
                <div class="panel panel-primary" data-step="14" data-intro="Transport information">
                  <div class="panel-heading">Transport Information</div>
                  <div class="panel-body">
                    <div class="row">
                      <div class="col-sm-6" data-step="15" data-intro="Location name of event">
                        <label for="locationEvent">Location Name</label>
                        <input type="text" name="locationEvent" id="locationEvent" class="form-control">
                      </div>
                      <div class="col-sm-6" data-step="16" data-intro="Which site the departure will be">
                        <label for="departureFrom">Departure Location</label>
                        <select name="departureFrom" id="departureFrom" class="form-control" name="departureFrom" required>
                          <option value=""></option>
                          <option value="Botafogo">Botafogo</option>
                          <option value="Urca">Urca</option>
                          <option value="Barra">Barra</option>
                        </select>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-4" data-step="17" data-intro="Amount of passenger to recepcionist hire the bus company">
                        <label for="qtdPerson">Nº of passengers</label>
                        <input type="number" name="qtdPerson" id="qtdPerson" class="form-control" required>
                      </div>
                      <div class="col-sm-8" data-step="18" data-intro="Choose what is the best type of transport for your event">
                        <div class="">
                          <label for="meansOfTransport">Means of Transport</label>
                        </div>
                        <div class="">
                          <select class="form-control" name="meansOfTransport" id="meansOfTransport">
                            <option value="">Select</option>
                            {{#each meansOfTransport}}
                              <option value="{{EventTransportID}}">{{TypeVehicleEnglish}}/{{TypeVehiclePort}} - {{AmountSeat}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="row" style="margin-top:3px;" data-step="19" data-intro="Check Yes if transport will wait at the venue to passenger to get on the bus">
