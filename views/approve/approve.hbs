<div class="panel panel-primary" data-step="1" data-intro="Functionality to approve or cancel requests of event">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-9">
        Approve
      </div>
      <div class="col-sm-3 text-right">
        <span data-step="3" data-intro="After choose the event/events click here to cancel" class="label label-danger" onclick="setEventToApprove(4);">Cancel</span>
        <span data-step="4" data-intro="After choose the event/events click here to approve" class="label label-success" onclick="setEventToApprove(2);">Approve</span>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        {{#if flashMsg}}
          <div class="alert {{flashMsg.type}}">
            <strong>{{flashMsg.statusName}} </strong> {{flashMsg.events}}
          </div>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Event Number</th>
              <th>Type</th>
              <th>Creator</th>
              <th>Responsible</th>
              <th>Start</th>
              <th>End</th>
              <th>Event Name</th>
              <th>Events Rescheduled</th>
              <th>More Info</th>
              <th data-step="2" data-intro="Check/Uncheck All Checkboxes">Approve <input type="checkbox" name="markAllCB" id="markAllCB" onclick="toggleCheckBox(this);"></th>
            </tr>
          </thead>
          <tbody>
            {{#each allEventToApprove}}
              <tr data-event-code="{{EventCode}}">
                <td class="text-center">{{EventCode}}</td>
                <td>{{Type}}</td>
                <td>{{CreatedByName}}</td>
                <td>{{ResponsibleByName}}</td>
                <td class="text-center">{{start}}</td>
                <td class="text-center">{{end}}</td>
                <td>{{title}}</td>
                <td class="text-center">
                  {{QtdEventsRescheduled}}
                  <i class="fa fa-plus" aria-hidden="true" onclick="modalEventsRescheduled({{EventCode}},'{{EventsRescheduled}}');"></i>
                </td>
                <td style="text-align:center;">
                  <i class="fa fa-search-plus" aria-hidden="true" onclick="loadMoreInfoApprove(this);"></i>
                </td>
                <td style="text-align:center;">
                  <input class="checkboxToApprove" type="checkbox" name="toApprove" value="{{EventCode}}">
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<form action="/approve/approve-event" method="post" id="approveEvent" style="display:none;"></form>

<div id="modalEvents" class="modal introJs-Bs3-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><span id="eventId"></span> - Events Rescheduled</h4>
      </div>
      <div class="text-right" style="margin-top: 10px; margin-right: 2%;">
        <span data-step="3" data-intro="After choose the event/events click here to cancel" class="label label-danger" onclick="setEventToApprove(4);">Cancel</span>
        <span data-step="4" data-intro="After choose the event/events click here to approve" class="label label-success" onclick="setEventToApprove(2);">Approve</span>
      </div>
      <table id="tableModalEvents" class="table table-hover table-striped" style="width: 96%; margin-left: 2%; margin-top: 10px;">
        <thead>
          <tr>
            <th>Event Number</th>
            <th>Date</th>
            <th>Approve <input type="checkbox" name="markAllCB" id="markAllCB" onclick="toggleCheckBoxModal(this);"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

{{#section 'script'}}

  <script type="text/javascript">

  function loadMoreInfoApprove(el){
     let form = document.createElement("form")
     form.method = "POST"
     form.action = "/find/search-event-by-code"

     var campo1 = document.createElement("input")
     campo1.name= 'EventCode'
     campo1.value= $(el).closest('tr').data('event-code')

     form.appendChild(campo1)

     document.body.appendChild(form)

     form.submit()
  }

  function toggleCheckBox(source) {
    checkboxes = document.getElementsByName('toApprove');
    for(checkbox in checkboxes)
      checkboxes[checkbox].checked = source.checked;
  }

  function setEventToApprove(status){
    $('#approveEvent').empty()
    $('<input />', {
      type: 'hidden',
      value: status,
      name: 'statusToUpdate'}).appendTo('#approveEvent');

    $('.checkboxToApprove:checkbox:checked').each(function(e){
      $('<input />', {
        type: 'checkbox',
        checked : "checked",
        value: this.value,
        name: 'selectedEvent'}).appendTo('#approveEvent');
    })

    $('#approveEvent').submit()
  }

  function modalEventsRescheduled(eventCode, events) {
    let arrayEvents = []
    if(events) {
      events.split(',').map(e => {
        arrayEvents.push({
          code: e.split(' ')[0],
          date: moment(e.split(' ')[1].replace('(', '').replace(')', '')).format('DD/MM/YYYY')
        })
      })
    }

    $('#tableModalEvents tbody').empty()
    let lines = ''
    arrayEvents.forEach(e => {
      lines += '<tr>' +
                  '<td class="text-center">' + e.code + '</td>' +
                  '<td class="text-center">' + e.date + '</td>' +
                  '<td class="text-center">' +
                    '<input class="checkboxToApprove" type="checkbox" name="toApproveModal" value="' + e.code + '">' +
                  '</td>' +
               '</tr>'
    })

    $('#tableModalEvents tbody').append(lines)
    $('#eventId').text(eventCode)
    $('#modalEvents').modal('show')
  }

  function toggleCheckBoxModal(source) {
    checkboxes = document.getElementsByName('toApproveModal');
    for(checkbox in checkboxes)
      checkboxes[checkbox].checked = source.checked;
  }

  </script>
{{/section}}
