<div class="panel panel-default meuMenu">
  <div class="panel-heading">
    <span>User</span><span class="label label-primary" data-toggle="modal" data-target="#newUser" >New</span>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <th>UserID</th>
        <th>Name</th>
        <th>Date Birth</th>
        <th>Children</th>
        <th>Active</th>
        <th>Edit</th>
        <th>Disable</th>
      </thead>
      <tbody>
        {{#data}}
          <tr>
            <td>{{UserID}}</td>
            <td>{{Name}}</td>
            <td>{{DateBirth}}</td>
            <td>{{QtdChild}}</td>
            <td>{{Active}}</td>
            <td class="text-center"><a href="/users/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
            <td class="text-center"><a href="users/disable"><i class="fa fa-times" aria-hidden="true"></i></a<</td>
          </tr>
        {{/data}}
      </tbody>
    </table>

  </div>
</div>

<div class="modal fade" id="newUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New User</h4>
      </div>
      <form action="createUser" method="post">
        <div class="modal-body">
            <div class="container">
              <div class="col-sm-12">

                <div class="row">
                  <input type="text" name="name" class="form-control" placeholder=" Name:">
                </div>
                <div class="row" style="margin-top:10px;">
                  <input type="text" name="DateBirth" class="form-control" placeholder=" Date of birth:">
                </div>
                <div class="row" style="margin-top:10px;">
                  <input type="text" name="QtdChild" class="form-control" placeholder=" Number of children:">
                </div>

              </div>
            </div>
        </div>
        <div class="modal-footer">
          <input type="submit" value="Create">
        </div>
      </form>
    </div>
  </div>
</div>
